{
    "extends": "./linters/css/custom-stylelint-config-standard.js",
    "rules": {
        "color-hex-case": "upper",
        "string-quotes": "single",
        "font-family-name-quotes": "always-where-recommended",
        "selector-pseudo-class-no-unknown": [
            true, {
                "ignorePseudoClasses": [
                    "global"
                ]
            }
        ],
        "property-no-unknown": [
            true, {
                "ignoreProperties": [
                    "composes"
                ]
            }
        ],
        "indentation": 4
    }
}
